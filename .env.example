# Site Configuration
SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Database Configuration
DB_USER=portfolio_user
DB_PASSWORD=your_secure_db_password_here
DATABASE_URL=postgresql://portfolio_user:your_secure_db_password_here@postgres:5432/portfolio_db

# NextAuth.js Configuration
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your_nextauth_secret_here_at_least_32_chars

# GitHub OAuth (Create at: https://github.com/settings/applications/new)
GITHUB_ID=your_github_oauth_app_id
GITHUB_SECRET=your_github_oauth_client_secret

# Vercel Blob Storage (Create at: https://vercel.com/dashboard/storages)
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_token_here

# Admin Access (comma-separated emails)
ADMIN_EMAILS=your-email@example.com,admin@example.com

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Environment
NODE_ENV=production