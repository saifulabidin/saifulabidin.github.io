# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Database Configuration
# For VPS deployment (Docker PostgreSQL):
DATABASE_URL=postgresql://portfolio:your_password@postgres:5432/portfolio_db?schema=public

# PostgreSQL Docker Service (only for docker-compose)
POSTGRES_USER=portfolio
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=portfolio_db
POSTGRES_PORT=5432

# Auto seed database on first deployment
AUTO_SEED=true

# NextAuth.js Configuration
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your_nextauth_secret_here_at_least_32_chars

# GitHub OAuth (Create at: https://github.com/settings/applications/new)
GITHUB_ID=your_github_oauth_app_id
GITHUB_SECRET=your_github_oauth_client_secret

# Vercel Blob Storage (Create at: https://vercel.com/dashboard/storages)
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_token_here

# Admin Access (comma-separated emails)
ADMIN_EMAILS=your-email@example.com,admin@example.com

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Environment
NODE_ENV=production